[user]
	name = Daniil Popov
	email = daniil.popov.office@gmail.com
[core]
	editor = vim
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[credential]
	helper = osxkeychain
[branch "master"]
    mergeoptions = --no-ff
[pull]
	rebase = true
[alias]
	bn = "!git rev-parse --abbrev-ref HEAD"
	cm = checkout master
	acm = commit -am 
	hr = "!git reset --hard $1 && git clean -f -d && : "
	pub = "!git push -u origin $(git bn)"
